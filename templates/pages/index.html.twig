{% extends 'base.html.twig' %}

{% block title %}Pages index{% endblock %}

{% block body %}
    <h1>Pages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.enable }}</td>
                <td>
                    <a href="{{ path('pages_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('pages_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pages_new') }}">Create new</a>
{% endblock %}
