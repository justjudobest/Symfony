{% extends 'base.html.twig' %}

{% block title %}ProductOption index{% endblock %}

{% block body %}
    <h1>ProductOption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parent_id</th>
                <th>Product_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_option in product_options %}
            <tr>
                <td>{{ product_option.id }}</td>
                <td>{{ product_option.parentId }}</td>
                <td>{{ product_option.productId }}</td>
                <td>
                    <a href="{{ path('product_option_show', {'id': product_option.id}) }}">show</a>
                    <a href="{{ path('product_option_edit', {'id': product_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_option_new') }}">Create new</a>
{% endblock %}
